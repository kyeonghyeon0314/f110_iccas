<?xml version="1.0"?>
<!--
F1TENTH Race Car URDF with Complete Physics Properties
Based on: f1tenth_gym and f1tenth_gym_ros
Vehicle: Traxxas Fiesta ST Rally 1/10 Scale
-->
<robot name="f1tenth_racecar">

  <!-- ============================================ -->
  <!-- Materials -->
  <!-- ============================================ -->
  <material name="black">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.3 0.57 1.0 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <!-- ============================================ -->
  <!-- Base Link (Chassis) -->
  <!-- ============================================ -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <mass value="5.0"/>  <!-- F1TENTH mass from gym -->
      <inertia
        ixx="0.0456" ixy="0.0" ixz="0.0"
        iyy="0.0683" iyz="0.0"
        izz="0.04712"/> <!-- From f1tenth_gym parameters -->
    </inertial>

    <visual>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.3302 0.2032 0.1"/>  <!-- wheelbase x width x height -->
      </geometry>
      <material name="blue"/>
    </visual>

    <!-- 바퀴와의 간섭을 없기 위함
    <collision>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.3302 0.2032 0.1"/>
      </geometry>
    </collision>
    -->
  </link>

  <!-- ============================================ -->
  <!-- LiDAR (Hokuyo 10LX) -->
  <!-- ============================================ -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0.275 0 0.19" rpy="0 0 0"/>  <!-- 0.275m forward, 0.19m high -->
  </joint>

  <link name="laser">
    <inertial>
      <mass value="0.130"/>  <!-- Hokuyo 10LX actual mass -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.026" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.026" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- ============================================ -->
  <!-- IMU Sensor -->
  <!-- ============================================ -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.1 0 0.09" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- ============================================ -->
  <!-- Rear Wheels (Fixed, Motor Controlled) -->
  <!-- ============================================ -->

  <!-- Left Rear Wheel -->
  <joint name="left_rear_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_rear_wheel"/>
    <origin xyz="0 0.12065 0.0508" rpy="0 0 0"/>  <!-- y = (wheel_width + width)/2 -->
    <axis xyz="0 1 0"/>  <!-- Rotation around Y axis -->
    <limit lower="-1e9" upper="1e9" effort="100.0" velocity="400.0"/>  <!-- VESC motor: 100 N·m -->
  </joint>

  <link name="left_rear_wheel">
    <inertial>
      <mass value="0.34055"/>  <!-- Wheel mass -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>  <!-- Cylinder inertia -->
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>  <!-- pi/2 rotation -->
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- Right Rear Wheel -->
  <joint name="right_rear_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_rear_wheel"/>
    <origin xyz="0 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1e9" upper="1e9" effort="100.0" velocity="400.0"/>  <!-- VESC motor: 100 N·m -->
  </joint>

  <link name="right_rear_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- ============================================ -->
  <!-- Front Wheels (Steerable, Ackermann) -->
  <!-- ============================================ -->

  <!-- Left Front Steering Hinge -->
  <joint name="left_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_steering_hinge"/>
    <origin xyz="0.3302 0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>  <!-- Steering axis (vertical) -->
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>  <!-- ±24°, from F1TENTH Gym -->
  </joint>

  <link name="left_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  <!-- Left Front Wheel -->
  <joint name="left_front_wheel_joint" type="revolute">
    <parent link="left_steering_hinge"/>
    <child link="left_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1e9" upper="1e9" effort="100.0" velocity="400.0"/>  <!-- AWD: VESC motor -->
  </joint>

  <link name="left_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- Right Front Steering Hinge -->
  <joint name="right_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_steering_hinge"/>
    <origin xyz="0.3302 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>
  </joint>

  <link name="right_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  <!-- Right Front Wheel -->
  <joint name="right_front_wheel_joint" type="revolute">
    <parent link="right_steering_hinge"/>
    <child link="right_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1e9" upper="1e9" effort="100.0" velocity="400.0"/>  <!-- AWD: VESC motor -->
  </joint>

  <link name="right_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <gazebo reference="laser">
    <sensor type="ray" name="hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1080</samples>
            <resolution>1</resolution>
            <min_angle>-2.35619</min_angle>
            <max_angle>2.35619</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=/scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>laser</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="gazebo_ros_ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <namespace>/f1tenth</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
        <remapping>distance:=distance</remapping>
      </ros>
      <update_rate>100.0</update_rate>
      <front_left_joint>left_steering_hinge_joint</front_left_joint>
      <front_right_joint>right_steering_hinge_joint</front_right_joint>
      <rear_left_joint>left_rear_wheel_joint</rear_left_joint>
      <rear_right_joint>right_rear_wheel_joint</rear_right_joint>
      <left_steering_joint>left_steering_hinge_joint</left_steering_joint>
      <right_steering_joint>right_steering_hinge_joint</right_steering_joint>
      <steering_wheel_radius>0.0508</steering_wheel_radius>
      <max_steer>0.4189</max_steer>
      <max_steering_angle>7.85</max_steering_angle>
      <max_speed>20.0</max_speed>
      <left_rear_wheel_spinning_joint>left_rear_wheel_joint</left_rear_wheel_spinning_joint>
      <right_rear_wheel_spinning_joint>right_rear_wheel_joint</right_rear_wheel_spinning_joint>
      <wheel_separation>0.2413</wheel_separation>
      <wheel_radius>0.0508</wheel_radius>
      <wheel_torque>100</wheel_torque>
      <wheel_acceleration>10.0</wheel_acceleration>
      <command_topic>cmd_vel</command_topic>
      <odometry_frame>odom</odometry_frame>
      <odometry_topic>odom</odometry_topic>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_wheel_tf>false</publish_wheel_tf>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_joint_state>true</publish_wheel_joint_state>
      <legacy_mode>false</legacy_mode>
    </plugin>
  </gazebo>

</robot>
