<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="hokuyo_10lx" params="parent name topic hz samples min_angle max_angle min_range max_range *origin">

    <!-- Hokuyo LiDAR Joint -->
    <joint name="${parent}_to_${name}" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
    </joint>

    <!-- Hokuyo LiDAR Link -->
    <link name="${name}_link">
      <inertial>
        <mass value="0.130"/>  <!-- Hokuyo 10LX actual mass -->
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
          ixx="0.0001" ixy="0.0" ixz="0.0"
          iyy="0.0001" iyz="0.0"
          izz="0.0001"/>
      </inertial>

      <visual>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.07"/>
        </geometry>
        <material name="hokuyo_black">
          <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.07"/>
        </geometry>
      </collision>
    </link>

    <!-- Gazebo LiDAR Sensor -->
    <gazebo reference="${name}_link">
      <sensor type="ray" name="${name}_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>${hz}</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>${samples}</samples>
              <resolution>1</resolution>
              <min_angle>${min_angle}</min_angle>
              <max_angle>${max_angle}</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>${min_range}</min>
            <max>${max_range}</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="gazebo_ros_${name}_controller" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>~/out:=${topic}</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>${name}_link</frame_name>
        </plugin>
      </sensor>
      <material>Gazebo/FlatBlack</material>
    </gazebo>

  </xacro:macro>

</robot>
