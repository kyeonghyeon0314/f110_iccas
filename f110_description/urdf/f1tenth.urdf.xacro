<?xml version="1.0"?>
<!--
F1TENTH Race Car URDF with Complete Physics Properties
Based on: f1tenth_gym and f1tenth_gym_ros
Vehicle: Traxxas Fiesta ST Rally 1/10 Scale
-->
<robot name="f1tenth_racecar" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include Hokuyo LiDAR -->
  <xacro:include filename="$(find f110_description)/urdf/hokuyo.urdf.xacro"/>

  <!-- ============================================ -->
  <!-- Materials -->
  <!-- ============================================ -->
  <material name="black">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.3 0.57 1.0 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <!-- ============================================ -->
  <!-- Base Link (Chassis) - Root Link -->
  <!-- ============================================ -->
  <!-- Note: KDL warning "root link has inertia" is harmless and can be ignored -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <mass value="5.0"/>  <!-- F1TENTH mass from gym -->
      <inertia
        ixx="0.0456" ixy="0.0" ixz="0.0"
        iyy="0.0683" iyz="0.0"
        izz="0.04712"/> <!-- From f1tenth_gym parameters -->
    </inertial>

    <visual>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.3302 0.2032 0.1"/>  <!-- wheelbase x width x height -->
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- ============================================ -->
  <!-- LiDAR (Hokuyo 10LX) -->
  <!-- ============================================ -->
  <xacro:hokuyo_10lx
    parent="base_link"
    name="laser"
    topic="/scan"
    hz="10"
    samples="1080"
    min_angle="-2.35619"
    max_angle="2.35619"
    min_range="0.1"
    max_range="30.0">
    <origin xyz="0.275 0 0.19" rpy="0 0 0"/>
  </xacro:hokuyo_10lx>

  <!-- ============================================ -->
  <!-- IMU Sensor -->
  <!-- ============================================ -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.1 0 0.09" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo IMU Sensor -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <namespace>/f1tenth</namespace>
          <remapping>~/out:=imu</remapping>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ============================================ -->
  <!-- Virtual Steering Wheel (Required by gazebo_ros_ackermann_drive) -->
  <!-- ============================================ -->
  <joint name="steering_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering_wheel_link"/>
    <origin xyz="0.15 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.283" upper="6.283" effort="100.0" velocity="10.0"/>
  </joint>

  <link name="steering_wheel_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="1e-5" ixy="0.0" ixz="0.0"
        iyy="1e-5" iyz="0.0"
        izz="1e-5"/>
    </inertial>
  </link>

  <!-- ============================================ -->
  <!-- Rear Wheels (Fixed, Motor Controlled) -->
  <!-- ============================================ -->

  <!-- Left Rear Wheel -->
  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_rear_wheel"/>
    <origin xyz="0 0.12065 0.0508" rpy="0 0 0"/>  <!-- y = (wheel_width + width)/2 -->
    <axis xyz="0 1 0"/>  <!-- Rotation around Y axis -->
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="left_rear_wheel">
    <inertial>
      <mass value="0.34055"/>  <!-- Wheel mass -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>  <!-- Cylinder inertia -->
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>  <!-- pi/2 rotation -->
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- Right Rear Wheel -->
  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_rear_wheel"/>
    <origin xyz="0 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="right_rear_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- ============================================ -->
  <!-- Front Wheels (Steerable, Ackermann) -->
  <!-- ============================================ -->

  <!-- Left Front Steering Hinge -->
  <joint name="left_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_steering_hinge"/>
    <origin xyz="0.3302 0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>  <!-- Steering axis (vertical) -->
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>
    <dynamics damping="0.7" friction="1.0"/>
  </joint>

  <link name="left_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  <!-- Left Front Wheel -->
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="left_steering_hinge"/>
    <child link="left_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="left_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- Right Front Steering Hinge -->
  <joint name="right_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_steering_hinge"/>
    <origin xyz="0.3302 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>
    <dynamics damping="0.7" friction="1.0"/>
  </joint>

  <link name="right_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  <!-- Right Front Wheel -->
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="right_steering_hinge"/>
    <child link="right_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="right_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  <!-- Friction and contact parameters for base_link -->
  <gazebo reference="base_link">
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Blue</material>
    <self_collide>false</self_collide>
  </gazebo>

  <!-- Friction parameters for wheels -->
  <gazebo reference="left_rear_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.005</minDepth>
    <maxVel>100.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="right_rear_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.005</minDepth>
    <maxVel>100.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="left_front_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.005</minDepth>
    <maxVel>100.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="right_front_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>1.0</kd>
    <minDepth>0.005</minDepth>
    <maxVel>100.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <!-- ============================================ -->
  <!-- Joint State Publisher Plugin -->
  <!-- ============================================ -->
  <gazebo>
    <plugin name="gazebo_ros_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>50</update_rate>
      <joint_name>left_rear_wheel_joint</joint_name>
      <joint_name>right_rear_wheel_joint</joint_name>
      <joint_name>left_front_wheel_joint</joint_name>
      <joint_name>right_front_wheel_joint</joint_name>
      <joint_name>left_steering_hinge_joint</joint_name>
      <joint_name>right_steering_hinge_joint</joint_name>
    </plugin>
  </gazebo>

  <!-- ============================================ -->
  <!-- F1TENTH Ackermann Drive Plugin -->
  <!-- ============================================ -->
  <gazebo>
    <plugin name="f1tenth_drive_plugin" filename="libf1tenth_drive_plugin.so">
      <ros>
        <namespace>/</namespace>
      </ros>

      <!-- Update rate -->
      <update_rate>100.0</update_rate>

      <!-- Wheel joints -->
      <front_left_wheel_joint>left_front_wheel_joint</front_left_wheel_joint>
      <front_right_wheel_joint>right_front_wheel_joint</front_right_wheel_joint>
      <rear_left_wheel_joint>left_rear_wheel_joint</rear_left_wheel_joint>
      <rear_right_wheel_joint>right_rear_wheel_joint</rear_right_wheel_joint>

      <!-- Steering joints -->
      <front_left_steering_joint>left_steering_hinge_joint</front_left_steering_joint>
      <front_right_steering_joint>right_steering_hinge_joint</front_right_steering_joint>

      <!-- Vehicle parameters -->
      <wheelbase>0.3302</wheelbase>
      <track_width>0.2413</track_width>
      <wheel_radius>0.0508</wheel_radius>

      <!-- Steering limits -->
      <max_steer_angle>0.4189</max_steer_angle>
      
      <!-- Control parameters -->
      <!-- Flip wheel rotation if measured sign is opposite (1.0 or -1.0) -->
      <wheel_rotation_sign>-1.0</wheel_rotation_sign>
    </plugin>
  </gazebo>

</robot>
