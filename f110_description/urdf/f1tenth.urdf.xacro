<?xml version="1.0"?>

<robot name="f1tenth_racecar" xmlns:xacro="http://www.ros.org/wiki/xacro">

  
  <xacro:include filename="$(find f110_description)/urdf/hokuyo.urdf.xacro"/>

  
  
  
  <material name="black">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.3 0.57 1.0 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  
  
  
  
  <link name="base_link">
    <inertial>
      <origin xyz="0.12 0 0.04" rpy="0 0 0"/>
      <mass value="8.0"/>
      <inertia
        ixx="0.0730" ixy="0.0" ixz="0.0"
        iyy="0.1093" iyz="0.0"
        izz="0.0754"/>
    </inertial>

    <visual>
      <origin xyz="0.165 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.3302 0.2032 0.1"/>  
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  
  
  
  <xacro:hokuyo_10lx
    parent="base_link"
    name="laser"
    topic="/scan"
    hz="10"
    samples="1080"
    min_angle="-2.35619"
    max_angle="2.35619"
    min_range="0.1"
    max_range="30.0">
    <origin xyz="0.275 0 0.19" rpy="0 0 0"/>
  </xacro:hokuyo_10lx>

  
  
  
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.1 0 0.09" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
  </link>

  
  <!-- Gazebo IMU 플러그인 설정 -->
  <gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <remapping>~/out:=imu/data_raw</remapping>
          <parameter name="use_sim_time" type="bool">true</parameter>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
        <frame_name>imu_link</frame_name>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

  
  
  
  <joint name="steering_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering_wheel_link"/>
    <origin xyz="0.15 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.283" upper="6.283" effort="100.0" velocity="10.0"/>
  </joint>

  <link name="steering_wheel_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="1e-5" ixy="0.0" ixz="0.0"
        iyy="1e-5" iyz="0.0"
        izz="1e-5"/>
    </inertial>
  </link>

  
  
  

  
  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_rear_wheel"/>
    <origin xyz="0 0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <link name="left_rear_wheel">
    <inertial>
      <mass value="0.34055"/>  
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>  
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>  
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  
  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_rear_wheel"/>
    <origin xyz="0 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <link name="right_rear_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  
  
  

  
  <joint name="left_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_steering_hinge"/>
    <origin xyz="0.3302 0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>  
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>
    <dynamics damping="0.7" friction="1.0"/>
  </joint>

  <link name="left_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="left_steering_hinge"/>
    <child link="left_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.05" friction="0.01"/>
  </joint>

  <link name="left_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  
  <joint name="right_steering_hinge_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_steering_hinge"/>
    <origin xyz="0.3302 -0.12065 0.0508" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.4189" upper="0.4189" effort="10.0" velocity="3.2"/>
    <dynamics damping="0.7" friction="1.0"/>
  </joint>

  <link name="right_steering_hinge">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="right_steering_hinge"/>
    <child link="right_front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.05" friction="0.01"/>
  </joint>

  <link name="right_front_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00026046" ixy="0.0" ixz="0.0"
        iyy="0.00026046" iyz="0.0"
        izz="0.00044"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.0508" length="0.0381"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707963 0 0"/>
      <contact>
        <lateral_friction value="1.0"/>
      </contact>
    </collision>
  </link>

  
  <gazebo reference="base_link">
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Blue</material>
    <self_collide>false</self_collide>
  </gazebo>

  
  <gazebo reference="left_rear_wheel">
    <mu1>1.5</mu1>
    <mu2>0.5</mu2>
    <slip1>0.0</slip1>
    <slip2>0.05</slip2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <fdir1>1 0 0</fdir1>
    <minDepth>0.003</minDepth>
    <maxVel>10.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="right_rear_wheel">
    <mu1>1.5</mu1>
    <mu2>0.5</mu2>
    <slip1>0.0</slip1>
    <slip2>0.05</slip2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <fdir1>1 0 0</fdir1>
    <minDepth>0.003</minDepth>
    <maxVel>10.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="left_front_wheel">
    <mu1>0.2</mu1>
    <mu2>10.0</mu2>
    <slip1>0.0</slip1>
    <slip2>0.0</slip2>
    <kp>10000000.0</kp>
    <kd>100.0</kd>
    <fdir1>1 0 0</fdir1>
    <minDepth>0.005</minDepth>
    <maxVel>10.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="right_front_wheel">
    <mu1>0.2</mu1>
    <mu2>10.0</mu2>
    <slip1>0.0</slip1>
    <slip2>0.0</slip2>
    <kp>10000000.0</kp>
    <kd>100.0</kd>
    <fdir1>1 0 0</fdir1>
    <minDepth>0.005</minDepth>
    <maxVel>10.0</maxVel>
    <self_collide>false</self_collide>
  </gazebo>

  
  
  
  <ros2_control name="f1tenth_system" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="left_rear_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100.0</param>
        <param name="max">100.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_rear_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100.0</param>
        <param name="max">100.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="left_steering_hinge_joint">
      <command_interface name="position">
        <param name="min">-0.7</param>
        <param name="max">0.7</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_steering_hinge_joint">
      <command_interface name="position">
        <param name="min">-0.7</param>
        <param name="max">0.7</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
        <robot_param>robot_description</robot_param>
        <robot_param_node>robot_state_publisher</robot_param_node>
        <parameters>$(find f110_description)/config/ros2_control.yaml</parameters>
        <ros>
          <parameter name="use_sim_time" type="bool">true</parameter>
        </ros>
    </plugin>
  </gazebo>

  <transmission name="left_rear_wheel_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_rear_wheel_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="left_rear_wheel_actuator">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_rear_wheel_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_rear_wheel_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="right_rear_wheel_actuator">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="left_steering_hinge_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_steering_hinge_joint">
      <hardwareInterface>position</hardwareInterface>
    </joint>
    <actuator name="left_steering_hinge_actuator">
      <hardwareInterface>position</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_steering_hinge_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_steering_hinge_joint">
      <hardwareInterface>position</hardwareInterface>
    </joint>
    <actuator name="right_steering_hinge_actuator">
      <hardwareInterface>position</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

</robot>
